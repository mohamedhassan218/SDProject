@model Case
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Information</title>
</head>

<body>
    <form method="post" style="width: 800px; height: auto; margin: auto; border: 2px solid rgba(14, 176, 208, 0.2); margin-top: 80px; background-color: rgba(14, 176, 208, 0.2); padding: 20px;">

        <div style="display: flex; flex-direction: row;">
            <div style="margin-right: 20px;">
                <label for="FirstName">First Name</label><br>
                <input asp-for="FirstName" type="text" required placeholder="Type First Name" style="width: 250px; height: 30px; border-color: transparent transparent #b4afaf transparent; background-color: rgba(255, 255, 255, 0.4)">
                <span asp-validation-for="FirstName"></span>
            </div>
            <div>
                <label for="Age">Age</label><br>
                <input asp-for="Age" type="number" min="1" required placeholder="Type Age" style="width: 250px; height: 30px; border-color: transparent transparent #b4afaf transparent; background-color: rgba(255, 255, 255, 0.4)">
                <span asp-validation-for="Age"></span>
            </div>
        </div>

        <div style="display: flex; flex-direction: row; margin-top: 20px;">
            <div style="margin-right: 20px;">
                <label for="LastName">Last Name</label><br>
                <input asp-for="LastName" type="text" required placeholder="Type Last Name" style="width: 250px; height: 30px; border-color: transparent transparent #b4afaf transparent; background-color: rgba(255, 255, 255, 0.4)">
                <span asp-validation-for="LastName"></span>
            </div>
            <div>
                <label for="CaseGender">Gender</label><br>
                <div style="display: flex; flex-direction: row; align-items: center;">
                    <input asp-for="CaseGender" type="radio" id="male" name="gender" value="1">
                    <label for="male">Male</label>
                </div>
                <div style="display: flex; flex-direction: row; align-items: center;">
                    <input asp-for="CaseGender" type="radio" id="female" name="gender" value="2">
                    <label for="female">Female</label>
                </div>
                <span asp-validation-for="CaseGender"></span>
            </div>
        </div>

        <div style="display: flex; flex-direction: row; margin-top: 20px;">
            <div style="margin-right: 20px;">
                <label for="Address">Address</label><br>
                <input asp-for="Address" type="text" required placeholder="Type Valid Address" style="width: 250px; height: 30px; border-color: transparent transparent #b4afaf transparent; background-color: rgba(255, 255, 255, 0.4)">
                <span asp-validation-for="Address"></span>
            </div>
            <div>
                <label for="PhoneNumber">Phone Number</label><br>
                <input asp-for="PhoneNumber" type="text" required placeholder="Type Valid Phone Number" style="width: 250px; height: 30px; border-color: transparent transparent #b4afaf transparent; background-color: rgba(255, 255, 255, 0.4)">
                <span asp-validation-for="PhoneNumber"></span>
            </div>
        </div>

        <div style="display: flex; flex-direction: row; margin-top: 20px;">
            <div style="margin-right: 20px;">
                <label for="FamilySize">Family Size</label><br>
                <input asp-for="FamilySize" type="number" min=2 required placeholder="Type number of Family members" style="width: 250px; height: 30px; border-color: transparent transparent #b4afaf transparent; background-color: rgba(255, 255, 255, 0.4)">
                <span asp-validation-for="FamilySize"></span>
            </div>
            <div>
                <label for="MonthlyEarnings">Monthly Earning</label><br>
                <input asp-for="MonthlyEarnings" type="text" required placeholder="Type Monthly Income" style="width: 250px; height: 30px; border-color: transparent transparent #b4afaf transparent; background-color: rgba(255, 255, 255, 0.4)">
                <span asp-validation-for="MonthlyEarnings"></span>
            </div>
        </div>

        <div style="display: flex; flex-direction: row; margin-top: 20px;">
            <div style="margin-right: 20px;">
                <label for="Inspector.InspectorId">Inspector</label><br>
                <input asp-for="Inspector.InspectorId" type="number" required placeholder=" Type Inspector ID" style="width: 250px; height: 30px; border-color: transparent transparent #b4afaf transparent; background-color: rgba(255, 255, 255, 0.4)">
                <span asp-validation-for="Inspector.InspectorId"></span>
            </div>
            <div>
                <label for="Dieseases">Diseases</label><br>
                <textarea asp-for="Dieseases" id="notes" name="notes" rows="5" cols="50" style="width: 250px; height: 80px; border-color: transparent transparent #b4afaf transparent; background-color: rgba(255, 255, 255, 0.4); padding: 10px; font-size: 16px; resize: none"></textarea>
                <span asp-validation-for="Dieseases"></span>
            </div>
        </div>
        <div style="margin-top: 20px;">
            <label for="GeneralNotes">General Notes</label><br>
            <textarea asp-for="GeneralNotes" id="notes" name="notes" rows="5" cols="50" style="width: 100%; height: 100px; border-color: transparent transparent #b4afaf transparent; background-color: rgba(255, 255, 255, 0.4); padding: 10px; font-size: 16px; border-radius: 4px; resize: none;"></textarea>
            <span asp-validation-for="GeneralNotes"></span>
        </div>

        <div style="margin-top: 20px;">
            <button type="submit" style="padding: 10px 20px; background-color: #0EB0D0; color: white; border: none; border-radius: 4px; font-size: 16px; cursor: pointer;">Submit</button>
        </div>
    </form>
</body>
