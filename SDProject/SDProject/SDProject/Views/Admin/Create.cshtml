@model CaseInspector

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <mata name="description" content="This Is Description For My First Page">
        <title>Create Case Inspector Account</title>
</head>
<body>
    <form style="width: 430px; margin: auto; margin-top: 80px; height: 580px; background-color: rgba(14, 176, 208, 0.2); border-radius: 18px;" method="post" enctype="multipart/form-data">
        <div style="width: 200px; margin: auto; position: relative; padding: 10px; top: 30px; text-align: center; font-weight: bold; font-size: larger;">
            Register an Inspector
        </div>
        <div style="margin-left: 30px; margin-bottom: 10px;">Full Name</div>
        <input asp-for="Name" class="1" type="text" required placeholder="Type a Complete Name" style="width: 350px; height: 30px; margin-left: 40px; margin-bottom: 10px; border-color: transparent transparent #b4afaf transparent; background-color: rgba(255, 255, 255, 0.4)">
        <span asp-validation-for="Name"></span>
        <div class="email">
            <div style="margin-left: 30px; margin-bottom: 10px;">Email</div>
            <input asp-for="Email" class="1" type="email" required placeholder="Type User Email" style="width: 350px; height: 30px; margin-left: 40px; margin-bottom: 10px; border-color: transparent transparent #b4afaf transparent; background-color: rgba(255, 255, 255, 0.4)">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="pass">
            <div style="margin-left: 30px; margin-bottom: 10px;">Password</div>
            <input asp-for="Password" type="password" required placeholder="Type Complex Password" style="width: 350px; height: 30px; margin-left: 40px; border-color: transparent transparent #b4afaf transparent; background-color: rgba(255, 255, 255, 0.4)">
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <div style="margin-left: 30px; margin-bottom: 10px;">Salary</div>
            <input asp-for="Salary" type="number" min="1" required placeholder="Type Value Of The Salary" style="width: 350px; height: 30px; margin-left: 40px; border-color: transparent transparent #b4afaf transparent; background-color: rgba(255, 255, 255, 0.4)">
            <span asp-validation-for="Salary"></span>
        </div>
        <div>
            <div style="margin-left: 30px; margin-bottom: 10px;">Image</div>
            <input asp-for="ImageData" type="file" name="image" accept="image/*" style="margin-left: 40px;">
            <span asp-validation-for="ImageData"></span>
        </div>
        <div>
            <input class="sub" type="submit" value="Create" style="position: relative; width: 360px; height: 40px; margin-top: 30px; margin-left: 30px; border-radius: 10px; background-color: rgba(255, 255, 255, 0.4); text-align: center;">
        </div>
    </form>
</body>
</html>