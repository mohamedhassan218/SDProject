        <title>Create Account</title>
        <link rel="stylesheet" href="~/css/registration.css">


</head>
<body>
    <form style=" width:430px; ;margin: auto; margin-top:80px; height:580px;background-color: rgba(14, 176, 208, 0.2);
     border-radius: 18px;" method="post">
        <div style="  width:200px; margin:auto;position:relative; padding:10px; top:30px;
    text-align: center; font-weight:bold;font-size: larger;">
            Register a New Admin
        </div>
        <br>
        <div>
            <div style="margin-left: 30px;margin-bottom: 10px;">Full Name</div>
            <input asp-for="Name" class=" 1" type="text" required placeholder="Type a Complete name" style="  width:350px;
        height: 30px;margin-left: 40px;margin-bottom: 10px;border-color: transparent transparent  #b4afaf transparent;
        background-color:rgba(255, 255, 255, 0.4)">
            <span asp-validation-for="Name"></span>
            <br>
            <div class="email">
                <div style="margin-left: 30px;margin-bottom: 10px;">Email</div>
                <input asp-for="Email" class="1" type="email" required placeholder="Type  Email" style="  width:350px;
    height: 30px;margin-left: 40px;margin-bottom: 10px;border-color: transparent transparent  #b4afaf transparent;
    background-color:rgba(255, 255, 255, 0.4)">
                <span asp-validation-for="Email"></span>
            </div>
            <br>
            <div class="pass">
                <div style="margin-left: 30px;margin-bottom: 10px;">Password</div>
                <input asp-for="Password" type=" password" required required placeholder="Type Complex password" style="  width:350px;
    height: 30px;margin-left: 40px;border-color: transparent transparent  #b4afaf transparent;background-color:
    rgba(255, 255, 255, 0.4)">
                <span asp-validation-for="Password"></span>
            </div>
            <br>
            <div class="ensurePassword">
                <div style="margin-left: 30px;margin-bottom: 10px;">Confirm Password</div>
                <input asp-for="ConfirmPassword" type=" password" required required placeholder="Type Complex password" style="  width:350px;
    height: 30px;margin-left: 40px;border-color: transparent transparent  #b4afaf transparent;background-color:
    rgba(255, 255, 255, 0.4)">
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <br>
            <div>
                <input class="sub" type="submit" value="Sign Up" style=" position: relative; width:360px;
height: 40px;  margin-top:30px;margin-left:30px; border-radius:10px;  background-color:rgba(255, 255, 255, 0.4); text-align:center;">
            </div>
    </form>
</body>
</html>