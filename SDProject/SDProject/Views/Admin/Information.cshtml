                </div>
                <input type="radio" id="female" name="gender" value="female">
                <label for="female">Female</label><br>
                
                
            </td>
        </tr>
        <tr style="margin-left: 30px;margin-bottom: 10px;">
            <td style="position: relative;
   left: 15px;">
                Address
            </td>
            <td style="position: relative;
left: 15px;">
                Phone Number
            </td>
        </tr>
        <tr>
            <td>
                <input type="text" required  placeholder="Type Valid Address" style="  width:250px;
    height: 30px;margin-left: 20px;border-color: transparent transparent  #b4afaf transparent;background-color:
    rgba(255, 255, 255, 0.4)">
            </td>
            <td>
                <input type="text" required placeholder="Type Valid Phone Number" style="  width:250px;
    height: 30px;margin-left: 40px;border-color: transparent transparent  #b4afaf transparent;background-color:
    rgba(255, 255, 255, 0.4)">
            </td>
        </tr>
        <tr style="margin-left: 30px;margin-bottom: 10px;">
            <td style="position: relative;
   left: 15px;">
                Family Size
            </td>
            <td style="position: relative;
left: 15px;">
                Monthly Earning
            </td>
        </tr>
        <tr>
            <td>
                <input type="number" min=2 required  placeholder="type number of Family members" style="  width:250px;
    height: 30px;margin-left: 20px;border-color: transparent transparent  #b4afaf transparent;background-color:
    rgba(255, 255, 255, 0.4)">
            </td>
            <td>
                <input type="text" required placeholder="Type Monthly Income" style="  width:250px;
    height: 30px;margin-left: 40px;border-color: transparent transparent  #b4afaf transparent;background-color:
    rgba(255, 255, 255, 0.4)">
            </td>
        </tr>
        <tr style="margin-left: 30px;margin-bottom: 10px;">
            <td style="position: relative;
   left: 15px; margin-top:10px">
                Inspector
            </td>
            <td style="position: relative;
left: 15px;">
                Diseases
            </td>
        </tr>
        <tr>
            <td>
                <input type="text" required placeholder=" Type Inspector Name" style="  width:250px;
    height: 30px;margin-left: 20px;border-color: transparent transparent  #b4afaf transparent;background-color:
    rgba(255, 255, 255, 0.4)">
            </td>
            <td>
                <textarea id="notes" name="notes" rows="5" cols="50" style="border-color: transparent transparent  #b4afaf transparent;background-color:
    rgba(255, 255, 255, 0.4) ;display: block;
    width: 255px; height:50px;
    padding: 10px;
    font-size: 16px;margin-left:30px;
    margin-left: 30px"></textarea>
            </td>
        </tr>
        <tr style="margin-left: 30px;margin-bottom: 10px;">
            <td style="position: relative;
   left: 15px;">
                General Notes
            </td>

        </tr>
        <tr>
            <td>
                <textarea id="notes" name="notes" rows="5" cols="50" style="border-color: transparent transparent  #b4afaf transparent;background-color:
    rgba(255, 255, 255, 0.4) ;display: block;
    width: 255px; height:100px;padding: 10px;
    font-size: 16px;
    border-radius: 4px; margin-left:15px;
    box-sizing: border-box;"></textarea>

